                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                    	<thresholdmobile translate="label">
							<label><![CDATA[<i class="fa fa-thumbs-up"></i> <i class="glace">When show menu mobile?</i>]]></label>
							<comment><![CDATA[<i class="glace">Set width of the browser viewport (in pixels) to show menu for mobile. Value 767 are recommended.</i>]]></comment>
							<frontend_type>text</frontend_type>
							<validate>validate-number validate-number-range number-range-480-9999</validate>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
