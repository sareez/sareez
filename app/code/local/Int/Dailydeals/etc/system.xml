							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</deal_price>
						
						<remaining translate="label">
							<label>Display Remaining QTY</label>
							<frontend_type>select</frontend_type>
							<source_model>dailydeals/system_config_source_remaining_enable</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<comment><![CDATA[Display Remaining Quantity Product in Sidebar]]></comment>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</remaining>
												
