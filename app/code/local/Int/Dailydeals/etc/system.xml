            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
				<fields>
												
						<qty_num translate="label">
							<label>Number of Sidebar Deals</label>
							<frontend_type>text</frontend_type>
						
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<comment><![CDATA[Display number of deals ]]></comment>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</qty_num>	
						
						<leftside translate="label">
							<label>Display in Sidebar</label>
							<frontend_type>select</frontend_type>
							<source_model>dailydeals/system_config_source_leftside_enable</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<comment><![CDATA[Display the active deals in left sidebar]]></comment>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</leftside>						
					
						<deal_price translate="label">
